<div class='row'>
  <div class='col-xs-5'>
    <div class="panel panel-default devise-bs">
      <div class="panel-heading">
        <h4><%= t('.sign_in', default: 'Sign in') %></h4>
      </div>
      <div class="panel-body col-xs-12">
        <%= simple_form_for resource, url: session_path(resource_name), html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :email, as: :email, autofocus: true %>
            <%= f.input :password, as: :password, autocomplete: 'off' %>
            <% if devise_mapping.rememberable? %>
              <%= f.input :remember_me, as: :boolean %>
            <% end %>
          <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'devise/shared/providers' %>
